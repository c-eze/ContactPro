@model IEnumerable<ContactPro.Models.Category>
@using ContactPro.Services.Interfaces

@inject IImageService ImageService

@{
	ViewData["Title"] = "Index";
}

<h1>Groups</h1>
<div class="row row-cols-md-3 g-3">
	@foreach (var category in Model)
	{
		<div class="col">
			<div class="card mb-3">
				<a class="text-decoration-none" asp-action="Details" asp-route-id="@category.Id">
					<img class="card-img-top" src='@ImageService.ConvertByteArrayToFile(category.ImageData!, category.ImageType!)' alt="...">
				</a>
				<div class="card-body">
					<ul class="d-flex justify-content-center list-unstyled">
						<li class="flex-grow-1">
							<h5 class="card-title">@category.Name</h5>
						</li>
						<li>
							<a class="editIcons" asp-action="EmailCategory" asp-route-id="@category.Id"><i class="bi bi-envelope-fill"></i></a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	}
</div>

@section scripts {
	<!--Sweet Alerts-->
	<script>
		let message = '@(ViewBag.SwalMessage)';

		if (!message.includes("Error") && message != '') {
			Swal.fire({
				backdrop: false,
				icon: 'success',
				title: message,
				showConfirmButton: true
			})
		} else if (message.includes("Error")) {
			Swal.fire({
				backdrop: false,
				icon: 'error',
				title: 'Oops...',
				text: message
			})
		}
	</script>
}