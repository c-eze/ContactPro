@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
	AppUser appUser = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>@ViewData["Title"] - Kinext</title>
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
	<link rel="manifest" href="/site.webmanifest">

	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!--fonts-->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;500;600;700;800&family=Roboto:ital,wght@0,100;0,400;0,900;1,100;1,300;1,500;1,900&display=swap"
		  rel="stylesheet">

	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

	<!--Dev Icons-->
	<link href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css" rel="stylesheet">

	<!--Bootstrap icons-->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
	<main class="content" id="mainHero">
		<div class="container-fluid overflow-hidden">
			<div class="row overflow-y-auto">
				<div class="col-md-3 fixed-top vh-100 ">
					<div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark h-100">
						<img class="img-fluid" src="/img/Kinext.png">
						<div class="dropdown">
							<a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
								<strong>@appUser.FullName</strong>
							</a>
							<ul class="dropdown-menu dropdown-menu-dark text-small shadow"> 
								<li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a></li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
										<button type="submit" class="btn btn-primary rounded-pill btnlinks">Logout</button>
									</form>
								</li>
							</ul>
						</div>
						<hr>
						<ul class="nav nav-pills flex-column mb-auto">
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Contacts" asp-action="Index">Everyone</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">My Profile</a>
							</li>
							@*  @if (User.IsInRole(nameof(Roles.Admin)))
                                    { *@
							<li class="nav-item">
								<a class="nav-link text-white fw-bold" asp-area="" asp-controller="Categories" asp-action="Index">+ Manage Users</a>
							</li>
									@* } *@
						</ul>
					</div>
				</div>
				<div class="offset-md-3 col-md-9">
					<section class="container">
						@RenderBody()
					</section>
					<footer>
						<div class="row align-items-center py-2">
							<div class="col">
								<div class="row align-items-center gy-2">
									<div class="col d-flex justify-content-center justify-content-md-start order-last order-md-first copyright">
										&copy; 2024 Chikere All Rights Reserved
									</div>
									<div class="col d-flex justify-content-center">
										<img src="/img/Kinext.png" height="50">
									</div>
									<div class="col-12 col-md d-flex justify-content-center justify-content-md-end">
										<a href="https://www.linkedin.com/in/chikere-ezekannagha/" target="_blank" class="socialicons"><i class="bi bi-linkedin p-2 "></i></a>
										<a href="https://x.com/chikeredev" target="_blank" class="socialicons"><i class="bi bi-twitter-x p-2"></i></a>
										<a href="https://www.youtube.com/channel/UChSaNW2QTbPUafJjWegP9aA" target="_blank" class="socialicons"><i class="bi bi-youtube p-2"></i></a>
									</div>
								</div>
							</div>
						</div>
					</footer>
				</div>
			</div>
		</div>
	</main>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>

	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

	<script src="~/js/site.js" asp-append-version="true"></script>

	<!--Sweet Alerts-->
	<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
